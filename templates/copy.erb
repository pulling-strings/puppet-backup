# start on (filesystem and net-device-up and stopped udevtrigger)
start on (local-filesystems and net-device-up IFACE!=lo)

stop on runlevel [06]
respawn

script
  sudo chown <%=@sysuser%> /var/log/copy.log
end script

exec sudo -u <%=@sysuser%> /opt/copy/x86_64/CopyConsole -r=<%=@folder%> -u=<%=@user%> --data=/home/<%=@sysuser%>/.copy  >> /var/log/copy.log

